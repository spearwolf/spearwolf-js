{
  "name": "spearwolf-js",
  "version": "0.0.1",
  "description": "various javascript helpers and experiments",
  "module": "src/index.js",
  "types": "types/index.d.ts",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "clean": "rimraf build",
    "start": "parcel --out-dir build/examples examples/*.html",
    "test:eslint": "eslint .",
    "test:serve": "serve build/tests",
    "test:types": "tsc -p ./types/test/tsconfig.json",
    "test:watch": "parcel watch --no-hmr --out-dir build/tests tests/index.html",
    "test": "run-s test:eslint test:types"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spearwolf/spearwolf-js.git"
  },
  "author": "Wolfger Schramm <wolfger@spearwolf.de>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/spearwolf/spearwolf-js/issues"
  },
  "homepage": "https://github.com/spearwolf/spearwolf-js#readme",
  "devDependencies": {
    "assert": "^1.4.1",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.12.0",
    "eslint-config-problems": "^2.0.0",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^1.11.0",
    "rimraf": "^2.6.3",
    "serve": "^10.1.1",
    "three": "^0.100.0",
    "typescript": "^3.2.2"
  },
  "peerDependencies": {
    "three": "^0.100.0"
  }
}
