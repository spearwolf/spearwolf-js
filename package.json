{
  "name": "spearwolf-js",
  "version": "0.0.1",
  "description": "various javascript helpers and classes for various three.js/webgl experiments!",
  "main": "dist/spearwolf.js",
  "module": "src/index.js",
  "types": "types/index.d.ts",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "build:umd": "cross-env NODE_ENV=production rollup -c scripts/rollup.config.umd.js",
    "build:esm": "cross-env NODE_ENV=production rollup -c scripts/rollup.config.esm.js",
    "build": "run-p build:*",
    "prepublishOnly": "run-p build:*",
    "clean": "rimraf build dist",
    "start": "parcel --no-hmr --out-dir build/examples examples/*.html",
    "test:eslint": "eslint .",
    "test:serve": "serve build/tests",
    "test:types": "tsc -p ./types/test/tsconfig.json",
    "test:watch": "parcel watch --no-hmr --out-dir build/tests tests/index.html",
    "test": "run-s test:eslint test:types"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spearwolf/spearwolf-js.git"
  },
  "author": "Wolfger Schramm <wolfger@spearwolf.de>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/spearwolf/spearwolf-js/issues"
  },
  "homepage": "https://github.com/spearwolf/spearwolf-js#readme",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.2.3",
    "assert": "^1.4.1",
    "babel-eslint": "^10.0.1",
    "cross-env": "^5.2.0",
    "eslint": "^5.12.0",
    "eslint-config-problems": "^2.0.0",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^1.11.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.1.0",
    "rollup-plugin-babel": "^4.3.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-size-snapshot": "^0.8.0",
    "rollup-plugin-terser": "^4.0.2",
    "serve": "^10.1.1",
    "three": "^0.100.0",
    "typescript": "^3.2.2"
  },
  "peerDependencies": {
    "three": "^0.100.0"
  }
}
