{
  "compilerOptions": {

    "strict": true,
    "strictNullChecks": false,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,

    "allowJs": true,
    "target": "es5",
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "commonjs",
    "noEmit": true,
    "baseUrl": ".",

  },
  "include": [
    "src/**/*.ts"
  ],
  "compileOnSave": false
}
